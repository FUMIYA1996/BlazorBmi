@page "/bmiattr"
<PageTitle>BmiAttr</PageTitle>
<h3>属性していなし</h3>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>名前</th>
            <th>身長</th>
            <th>体重</th>
            <th>BMI</th>
        </tr>
    </thead>
    @foreach(var it in Items)
    {
        <BlazorBmi.Components.BmiChildItem Name="@it.Name01"
        Height="@it.Height" Weight="@it.Weight" />
    }
</table>

<h3>属性指定あり</h3>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>名前</th>
            <th>身長</th>
            <th>体重</th>
            <th>BMI</th>
        </tr>
    </thead>
    @foreach (var it in Items)
    {
        var attrs = new Dictionary<string, object>()
        {
            { "Name", it.Name01},
            { "Height", it.Height},
            { "Weight", it.Weight},
        };
        <BlazorBmi.Components.BmiChildItem @attributes="attrs" />
    }
</table>

