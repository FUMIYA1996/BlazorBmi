    protected override void OnInitialized()
    {
        this.Items = new List<BmiItem>();
        this.Items.Add(new BmiItem()
            {
                Name01 = "masuda",
                Height = 1160,
                Weight = 160
            });
        this.Items.Add(new BmiItem()
            {
                Name01 = "tomoaki",
                Height = 150,
                Weight = 35
            });
        this.Items.Add(new BmiItem()
            {
                Name01 = "mori",
                Height = 5625,
                Weight = 458
            });
        this.Items.Add(new BmiItem()
            {
                Name01 = "fumiya",
                Height = 169,
                Weight = 52
            });
    }
}
